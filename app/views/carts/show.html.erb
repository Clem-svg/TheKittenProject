<h1> Panier : </h1>

<ul>
  <% @cart.cart_lines.each do |i| %>
    <li><%= i.item.title %> ( x <%= i.quantity %>)</li> </li>
  <% end %>
</ul>

<p> <%= link_to "Retour aux produits", root_path %> </p>
<%= button_to "Vider le panier", @cart, method: :delete, data: {
confirm: "Êtes-vous sûr ?" }, class: "btn btn-danger" %>
