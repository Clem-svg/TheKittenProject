<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @user, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Modifer mon profil</h1>
        <div class="form-group">
          <%= f.label :first_name, "Prénom" %><br />
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Nom" %><br />
          <%= f.text_field:last_name, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :avatar, "Avatar"%><br />
          <%= f.file_field :avatar%>
        </div>

      <div class="actions mt-4">
        <%= f.submit "Mettre à jour", class: "btn btn-md btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>