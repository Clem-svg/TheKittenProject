<!-- Page Home Index -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">

      <!--Jumbotron-->
      <div class="jumbotron jumbotron-fluid mt-3">
        <div class="container banner text-center">
        </div>
      </div>

      <h3 class="text-center mb-5">DÃ©couvrez notre collection 2020-2021</h3>

      <!--Cards -->
      <div class="row">
       <% @items.each_with_index do |item, i| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="<%= item_path(item.id) %>"><img class="card-img-top" src="<%= item.image_url %>" alt=""></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="<%= item_path(item.id) %>"><%= item.title %></a>
                </h4>
                <h5><%= item.price %> $</h5>
                <p class="card-text"><%= item.description %></p>
                <%= link_to "En chavoir plus", item_path(item.id), class: "btn btn-lg btn-block btn-outline-medium" %>
                <%= button_to "Ajouter au panier", cart_lines_path(item_id: item), class: "btn btn-lg btn-block btn-outline-success" %>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
